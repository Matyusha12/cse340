<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Classification</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <h1>Add Classification</h1>
    <% if (typeof flashMessage !== 'undefined') { %>
        <div class="flash-message"><%= flashMessage %></div>
    <% } %>
    <form action="/inv/add-classification" method="post">
        <label for="classification_name">Classification Name:</label>
        <input type="text" id="classification_name" name="classification_name" value="<%= classification_name %>" required>
        <button type="submit">Add Classification</button>
    </form>
    <% if (errors && errors.length > 0) { %>
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
            <% }) %>
        </ul>
    <% } %>
</body>
</html>